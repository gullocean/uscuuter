      .home-video__heading small {
        font-size: 38px;
      }
      .home-video__btn-secondary {
        margin-left: 10px;
      }
      .home-video__btn-secondary .play {
        width: 16px;
        height: 16px;
        margin-top: 17px;
      }
      .prlx-bg {
