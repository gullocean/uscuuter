      }
      .home-video__btn-secondary {
        margin-left: 10px;
      }
      .home-video__btn-secondary .play {
        width: 16px;
        height: 16px;
        margin-top: 17px;
      }
      .prlx-bg {
        background-image: url("{{ 'home-video-bg-3.jpg' | asset_img_url: '2048x2048' }}");
        background-position: -120px 50%;
      }
