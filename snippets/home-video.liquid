<div class="home-video">
  <video id="bgvid" autoplay muted loop style="">
    <source src="{{ 'home-video-bg.mp4' | asset_url }}" type="video/mp4">
    <img src="{{ 'home-video-bg-3.jpg' | asset_img_url: '2048x2048' }}">
  </video>

  <div class="wrapper wrapper--margins">
    <div class="home-video__content">
      <h1 class="home-video__heading"><small>Introducing</small><br>
        Uber Scuuter Plus</h1>
      <p class="home-video__text">
        <a href="{{ all_products[settings.menu_product].url }}" class="home-video__btn-primary btn btn--regular btn--fill btn--color">{{ 'products.product.add_to_cart' | t }}</a>
        <a href="{{ settings.home-video-code }}" class="video-overlay home-video__btn-secondary btn btn--regular btn--fill btn--dark">
          {% include 'asset_svg' with 'play_arrow' %}
          Watch the Film (1:07)
        </a>
      </p>
    </div>

{% comment %}
    <div class="content{% unless settings.home-video-code == blank %} push-up {% endunless %}">
      <div class="display-table">
        <h2 class="display-table-cell huge-title">
          {% if settings.home-video-text != blank %}
            {{ settings.home-video-text }}
          {% else %}
            {{ 'homepage.onboarding.welcome' | t }}
          {% endif %}
        </h2>
      </div>
    </div>
    {% unless settings.home-video-code == blank %}
      <a href="{{ settings.home-video-code }}" class="video-overlay"><span class="video-button">{% include 'asset_svg' with 'play_arrow' %}</span></a>
    {% endunless %}
{% endcomment %}

  </div>

  <style>
    video#bgvid {
      display: none;
    }
    .home-video {
    }
    .home-video__content {
    }
    .home-video__heading {
