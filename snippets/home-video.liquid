      font: 100 22px/1 "D3 Euronism";
      color: #fff;
    }
    .home-video__text {
    }
    .home-video__btn-primary {
      margin-bottom: 15px;
    }
    .home-video__btn-secondary {
      margin-bottom: 15px;
    }
    .home-video__btn-secondary .play {
      float: left;
      position: relative;
      display: inline-block;
